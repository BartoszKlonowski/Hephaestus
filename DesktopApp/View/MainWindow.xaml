<Window x:Class="DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        xmlns:views="clr-namespace:DesktopApp.View.Screens"
        xmlns:viewmodels="clr-namespace:DesktopApp.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Window.Resources>
        <DataTemplate x:Name="LoginView" DataType="{x:Type viewmodels:LoginViewModel}">
            <views:LoginView DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Border CornerRadius="50" Grid.RowSpan="3">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="DarkSlateGray" Offset="0.3"/>
                    <GradientStop Color="LightSlateGray" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>


        <Image Source="/View/Resources/Images/Logo.png"
               Stretch="UniformToFill" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Height="150"
               Grid.Row="0"/>
        <TextBlock Text="Hephaestus" Grid.Row="0" Margin="300,50" FontSize="30" HorizontalAlignment="Left" Foreground="White"/>

        <ContentControl Content="{Binding}" Margin="10" Grid.Row="1" HorizontalAlignment="Left"/>
    </Grid>
</Window>
